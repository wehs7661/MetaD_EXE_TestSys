d: DISTANCE ATOMS=1,4
lambda: EXTRACV NAME=lambda

METAD ...
ARG=d,lambda 
SIGMA=0.1,0.0001     # small SIGMA ensure that the Gaussian approaximate a delta function
HEIGHT=2.478956208925815    # kJ/mol
PACE=500        # should be nstexpanded
GRID_MIN=0.1,0   # index of alchemical states starts from 0
GRID_MAX=1.5,19    # we have 6 states in total
GRID_BIN=100,19
TEMP=298
BIASFACTOR=60
LABEL=metad    
FILE=HILLS_2D
... METAD

PRINT STRIDE=10 ARG=d,lambda,metad.bias FILE=COLVAR
